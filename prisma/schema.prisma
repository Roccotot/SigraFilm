generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role     @default(USER)
  tickets   Ticket[]
  createdAt DateTime @default(now())
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  status      Stato    @default(NON_RISOLTO)
  createdAt   DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}

enum Stato {
  NON_RISOLTO
  IN_RISOLUZIONE
  RISOLTO
}

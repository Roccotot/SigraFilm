generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  role      Role
  tickets   Ticket[] @relation("UserTickets")
  createdAt DateTime @default(now())
}

enum Role {
  cinema
  admin
}

model Ticket {
  id          Int      @id @default(autoincrement())
  cinema      String
  sala        String
  tipo        String
  descrizione String
  urgenza     String
  stato       Stato    @default(NON_RISOLTO)
  createdAt   DateTime @default(now())
  createdBy   User?    @relation("UserTickets", fields: [createdById], references: [id])
  createdById Int?
}

enum Stato {
  NON_RISOLTO
  IN_RISOLUZIONE
  RISOLTO
}
